<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/background_main"/>


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <ImageView

                android:id="@+id/title_main"
                android:layout_width="430dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/map_main"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/map" />

                    <ImageView
                        android:id="@+id/accountbook_main"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/accountbook" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/calender_main"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/calender" />

                    <ImageView
                        android:id="@+id/weather_main"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/weather_main" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/notebook_main"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/notebook" />

                    <ImageView
                        android:id="@+id/movie_main"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/movie" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/emojify_main"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/camera_menu" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp" />

                </LinearLayout>





            </LinearLayout>


        </LinearLayout>
    </FrameLayout>



</LinearLayout>